<Window x:Class="Coral_Launcher.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="624"
        Width="1000"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#0E0E1A"
        Icon="/Views/Pages/Icon.ico">

    <Grid>
        <Rectangle Fill="#0E0E1A"
               Opacity="0.85"
               Panel.ZIndex="-1"/>
        
        <Canvas HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,50,0"/>

        
        <Border Width="360" Height="338" Background="#161622" CornerRadius="10" Margin="60,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel Margin="30">
                
                <TextBlock Text="Coral" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                
                <TextBlock Text="Login" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>

                
                <TextBlock Text="Login Token" 
                           FontFamily="Segoe UI" 
                           FontSize="12" 
                           Foreground="#AAAAAA" 
                           Margin="0,0,0,5"/>
                <Border Background="#1E1E2D" CornerRadius="5">
                    <TextBox x:Name="TokenInput" 
                             Height="40" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Foreground="White" 
                             FontSize="14" 
                             Padding="10"/>
                </Border>

                
                <Border Background="#1E1E2D" CornerRadius="5"/>

                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,15,0,0"/>

                
                <Button Height="42" Margin="0,20,0,0" Click="Login_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="#563BFB" CornerRadius="6" x:Name="buttonBorder">
                                <Grid>
                                    <TextBlock Text="Sign In" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#6A4EFF"/>
                                    
                                    <Setter TargetName="buttonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="White" BlurRadius="15" ShadowDepth="0"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#563BFB"/>
                                    
                                    <Setter TargetName="buttonBorder" Property="Effect" Value="{x:Null}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                
                <TextBlock Text="Don’t have an account? Sign Up!" 
                           FontFamily="Segoe UI" 
                           FontSize="12" 
                           Foreground="#AAAAAA" 
                           HorizontalAlignment="Center" 
                           Cursor="Hand" 
                           TextDecorations="Underline"
                           Margin="0,15,0,0"
                           MouseLeftButtonUp="Register_Click"/>
            </StackPanel>
        </Border>

        
        <TextBlock Text="Coral Launcher 0.3.2 Stable" FontSize="10" Foreground="#666" VerticalAlignment="Bottom" Margin="70,0,0,20"/>

        
        <Border x:Name="ErrorBox" Background="IndianRed" Opacity="1" CornerRadius="10" Margin="342,519,342,25" Visibility="Collapsed">
            <Grid>
                <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="25" FontWeight="Medium" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="26"/>
                <TextBlock Text="Invalid or expired login token." x:Name="ErrorMSG" FontSize="17" FontWeight="Medium" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Width="255" Margin="61,0,0,0"/>
            </Grid>
        </Border>

        
        <Border x:Name="BanBox" Background="Maroon" Opacity="1" CornerRadius="10" Margin="342,519,342,25" Visibility="Collapsed">
            <Grid>
                <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="25" FontWeight="Medium" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="26"/>
                <TextBlock Text="You are Banned from Coral!" x:Name="ErrorMSG1" FontSize="17" FontWeight="Medium" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Width="255" Margin="61,0,0,0"/>
            </Grid>
        </Border>

        
        <Border x:Name="ValidBox" Background="ForestGreen" Opacity="1" CornerRadius="10" Margin="342,519,342,25" Visibility="Collapsed">
            <Grid>
                <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="25" FontWeight="Medium" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBlock Text="Successfully logged in!" x:Name="ValidMSG" FontSize="17" FontWeight="Medium" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Width="243" Margin="55,0,0,0"/>
            </Grid>
        </Border>
        <Image HorizontalAlignment="Left" Height="368" Margin="535,0,0,0" VerticalAlignment="Center" Width="366" Source="/Views/Pages/battlebus.png"/>

    </Grid>
</Window>
